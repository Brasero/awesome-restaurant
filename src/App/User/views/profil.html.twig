{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="../assets/css/profil.css">

{% endblock %}

{% block body %}
    <div class="profilContainer">
        <div class="firstContainer">
            <div class="title">
                <h1>Mon compte</h1>
                <div></div>
            </div>

            <div>
                <a href="{{ path('user.commande') }}">
                        <div class="card">
                            <div class="rond">
                                <img class="commande" src="../assets/img/ressources/icon/commande/commandeIcon.svg">
                            </div>
                            <p>Mes commandes</p>
                        </div>
                    </a>
                <a href="{{ path('user.adresse') }}">
                    <div class="card">
                        <div class="rond">
                            <img class="adresse" src="../assets/img/ressources/icon/Adresse/Adresse.png" alt="">
                        </div>
                        <p>Mes adresses</p>
                    </div>
                </a>
                <a href="{{ path('user.paramProfil') }}">
                    <div class="card">
                        <div class="rond">
                            <img class="param" src="../assets/img/ressources/icon/Param/Param.svg" alt="">
                        </div>
                        <p>Paramètres profil</p>
                    </div>
                </a>
                <a href="{{ path('user.aide') }}">
                    <div class="card">
                        <div class="rond">
                            <img class="Aide" src="../assets/img/ressources/icon/Aide/Aide.svg" alt="">
                        </div>
                        <p>Aide et question</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="secondContainer">
            <div class="title">
                <h1>Mes dernières commandes</h1>
                <div></div>
            </div>
            <div class="tableCommande">
                <div class="tablecolumn">
                    <p class="partName">Date</p>
                    <p>28/10/2022</p>
                </div>
                <div class="tablecolumn">
                    <p class="partName">Numéro de commande</p>
                    <p>123456789</p>
                </div>
                <div class="tablecolumn">
                    <p class="partName">Produit</p>
                    <p>burger</p>
                </div>
                <div class="tablecolumn">
                    <p class="partName">prix</p>
                    <p>5€</p>
                </div>
            </div>
        </div>

{% endblock %}