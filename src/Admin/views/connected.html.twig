                <a href="index.php?page=clients" class="navLink">
                    <li>
                        <i class="bi bi-person-circle">
                        </i>
                        <span>Clients</span>
                    </li>
                </a>
                <a href={{ path('admin.produit.manage') }}
                    {% if active == "produit" %}
                        class="navLink active"
                    {% else%}
